#
chain udp$chsuff $chsuff

proto udp

rule target(udp$chsuff)
cmp -A Wout -m udp -p udp -j udpWout
#--------------------------------------------------
chain udp$chsuff
target acpt$chsuff

# ntp / time
rule src(mac.lan) dpt(ntp) comment(time) dst(time.euro.apple.com,time.asia.apple.com,time.apple.com)
cmp -A udpWout -m udp -p udp -s 192.168.71.230 -d 17.72.148.52,17.72.148.53,17.82.253.7,17.83.253.7,17.151.16.12,17.151.16.14,17.151.16.20,17.151.16.21,17.151.16.22,17.151.16.23,17.151.16.38,17.171.4.13,17.171.4.14,17.171.4.15,17.171.4.33,17.171.4.34,17.171.4.35,17.171.4.36,17.171.4.37 --dport ntp -j acptWout -m comment --comment time
# -A udpFWinet -m udp -p udp  -s $MAC_LAN_ADDRESS --dport ntp  -j acptFWinet -m comment --comment time
# android ? etc.
rule src(mac.lan) dpt(ntp) comment(time)

# skype
rule dpt($skype-x_port) src(mac.lan) comment(skype-fw 1o)
cmp -A udpWout -m udp -p udp -s 192.168.71.230 --dport $skype-x_port -j acptWout -m comment --comment "skype-fw 1o"
rule dpt($skype-port-range) src(mac.lan) comment(skype-fw 2o)
cmp -A udpWout -m udp -p udp  -s 192.168.71.230 --dport 40000:49500  -j acptWout -m comment --comment "skype-fw 2o"
rule spts($skype-incoming-ports) src(mac.lan) comment(skype-fw 3o)
cmp -A udpWout -m udp -p udp -s 192.168.71.230 -m multiport --sports 46528,64231 -j acptWout -m comment --comment "skype-fw 3o"
