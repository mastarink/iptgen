#
chain udp_acpt$chsuff udp$chsuff


proto udp
rule chain($chsuff) target(udp$chsuff)
cmp -A $chsuff -m udp  -p udp   -j udp$chsuff

# -----------------------------------------------
target udp_acpt$chsuff

include domain      avahi             samba skype acpt


spt - ; dpt - ; comment - ; proto -


rule target(drop$chsuff)
cmp -A udp$chsuff -j drop$chsuff
